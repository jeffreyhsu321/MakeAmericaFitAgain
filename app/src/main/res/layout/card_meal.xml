<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_COLORME"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bg1">

            <!-- TITLE -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal"
                android:textSize="20sp"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- FOODS -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_foodlist"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_food"
                >

                <!-- HORIZONTAL LINE -->
                <View android:background="#000000"
                    android:layout_width = "match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- FOOD 1 -->
                <TextView
                    android:id="@+id/tv_food1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Banana 1"
                    android:padding="2dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv_calories1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_food1"
                    android:text="100"
                    android:padding="2dp"
                    android:gravity="right"/>

                <!-- HORIZONTAL LINE -->
                <View android:background="#444444"
                    android:layout_width = "match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_food1"/>

                <!-- FOOD 2 -->
                <TextView
                    android:id="@+id/tv_food2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_food1"
                    android:text="Banana 1"
                    android:padding="2dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv_calories2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_food2"
                    android:text="100"
                    android:padding="2dp"
                    android:gravity="right"/>

                <!-- HORIZONTAL LINE -->
                <View android:background="#444444"
                    android:layout_width = "match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_food2"/>

                <!-- FOOD 3 -->
                <TextView
                    android:id="@+id/tv_food3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_food2"
                    android:text="Banana 1"
                    android:padding="2dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv_calories3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_food3"
                    android:text="100"
                    android:padding="2dp"
                    android:gravity="right"/>

                <!-- HORIZONTAL LINE -->
                <View android:background="#444444"
                    android:layout_width = "match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_food2"/>

                <!-- FOOD 4 -->
                <TextView
                    android:id="@+id/tv_food4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_food3"
                    android:text="Banana 1"
                    android:padding="2dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv_calories4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_food4"
                    android:text="100"
                    android:padding="2dp"
                    android:gravity="right"/>

                <!-- HORIZONTAL LINE -->
                <View android:background="#444444"
                    android:layout_width = "match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_food3"/>

                <!-- FOOD 5 -->
                <TextView
                    android:id="@+id/tv_food5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_food4"
                    android:text="Banana 1"
                    android:padding="2dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/tv_calories5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_food5"
                    android:text="100"
                    android:padding="2dp"
                    android:gravity="right"/>

                <!-- HORIZONTAL LINE -->
                <View android:background="#444444"
                    android:layout_width = "match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_food4"/>

            </android.support.constraint.ConstraintLayout>

            <!-- IMAGE -->
            <ImageView
                android:id="@+id/iv_food"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_foodlist"
                android:layout_margin="10dp"
                android:src="@drawable/loading"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

